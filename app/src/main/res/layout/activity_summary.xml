<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryActivity"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/summaryheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SUMMARY"
            android:fontFamily="@font/proxima_nova_light"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width = "match_parent"
        android:layout_height = "560dp"
        android:layout_marginTop="12sp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_marginBottom="16sp"
        app:cardCornerRadius="19dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16sp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Material" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Count" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16sp">

                <TextView
                    android:id="@+id/metaldesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_light"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Metal" />
                <TextView
                    android:id="@+id/metalcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_light"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Count" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16sp">

                <TextView
                    android:id="@+id/paperdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_light"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Paper" />
                <TextView
                    android:id="@+id/papercount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_light"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Count" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16sp">

                <TextView
                    android:id="@+id/plasticdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_light"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Plastic" />
                <TextView
                    android:id="@+id/plasticcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_light"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Count" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16sp">

                <TextView
                    android:id="@+id/wastedesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_light"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Waste" />
                <TextView
                    android:id="@+id/wastecount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_light"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Count" />

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>